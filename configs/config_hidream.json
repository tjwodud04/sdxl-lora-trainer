{
  "model_name": "HiDream-ai/HiDream-I1-Full",
  "dataset_name": "jingliu_sdxl_20_ep_dataset",
  "model_short_name": "hidream",
  "trial_name": "trial1",
  "output_dir": "./output/hidream-lora",
  "lora_config": {
    "r": 64,
    "lora_alpha": 128,
    "target_modules": ["to_k", "to_q", "to_v", "to_out.0"],
    "lora_dropout": 0.05,
    "bias": "none"
  },
  "training_args": {
    "learning_rate": 1e-4,
    "num_train_epochs": 10,
    "train_batch_size": 1,
    "gradient_accumulation_steps": 4,
    "mixed_precision": "fp16",
    "gradient_checkpointing": true,
    "max_grad_norm": 1.0,
    "lr_scheduler": "cosine",
    "warmup_steps": 500,
    "save_steps": 500,
    "resolution": 1024,
    "use_8bit_adam": true
  }
}
